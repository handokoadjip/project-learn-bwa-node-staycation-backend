<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">

	<title><%= title %></title>

	<!-- Custom fonts for this template-->
	<link href="/sb-admin-2/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
	<link
		href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
		rel="stylesheet">

	<!-- Custom styles for this template-->
	<link href="/sb-admin-2/css/sb-admin-2.min.css" rel="stylesheet">

	<!-- Custom styles for this page -->
	<link href="/sb-admin-2/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

	<!-- Page Wrapper -->
	<div id="wrapper">

		<!-- Sidebar -->
		<%- include('../../../partials/sidebar') %>
		<!-- End of Sidebar -->

		<!-- Content Wrapper -->
		<div id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				<!-- Topbar -->
				<%- include('../../../partials/topbar') %>
				<!-- End of Topbar -->

				<!-- Begin Page Content -->
				<div class="container-fluid">

					<!-- Page Heading -->
					<h1 class="h3 mb-2 text-gray-800">Booking</h1>
					<p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
						For more information about DataTables, please visit the <a target="_blank"
							href="https://datatables.net">official DataTables documentation</a>.</p>

					<!-- DataTales Example -->
					<div class="card shadow mb-4">
						<div class="card-header py-3">
							<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
									<thead>
										<tr>
											<th style="width: 10%;">No</th>
											<th>Invoice</th>
											<th>Date</th>
											<th>Vacation</th>
											<th>Member</th>
											<th>Status</th>
											<th style="width: 10%;">Action</th>
										</tr>
									</thead>
									<tbody>
										<% bookings.map((booking, index) => { %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= booking.invoice %></td>
                        <td><%= booking.bookingStartDate.toLocaleString().split(',')[0] %> s/d
													<%= booking.bookingEndDate.toLocaleString().split(',')[0] %></td>
                        <td><%= booking.vacationId.name %></td>
                        <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                        <td><%= booking.payments.status %></td>
                        <td>
                          <a href="javascript:void(0)" class="btn btn-info btn-circle btn-sm button-show" data-id="<%= booking._id %>" data-toggle="modal" data-target="#formModal"><i class="fas fa-eye"></i></a>
                        </td>
                      </tr>
                    <% }); %> 
									</tbody>
								</table>
							</div>
						</div>
					</div>


				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->

			<!-- Footer -->
			<%- include('../../../partials/footer') %>
			<!-- End of Footer -->

		</div>
		<!-- End of Content Wrapper -->

	</div>
	<!-- End of Page Wrapper -->

	<!-- Scroll to Top Button-->
	<a class="scroll-to-top rounded" href="#page-top">
		<i class="fas fa-angle-up"></i>
	</a>

	<!-- Modal -->
	<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">Detail Booking</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
				<div class="modal-body">
				<div class="row">
					<div class="col-md-5">
						<img src="" alt="" class="w-100" id="image">
					</div>
					<div class="col-md-7">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th scope="col">Member</th>
									<td scope="col" id="member"></td>
								</tr>
								<tr>
									<th scope="col">Total</th>
									<td scope="col" id="total"></th>
								</tr>
								<tr>
									<th scope="col">Account Holder</th>
									<td scope="col" id="accountHolder"></td>
								</tr>
								<tr>
									<th scope="col">Vacation</th>
									<td scope="col" id="vacation"></td>
								</tr>
							</thead>
						</table>
						<ul class="list-inline">
							<li class="list-inline-item">
									<form action="" method="post" role="form" class="form-inline pull-right" id="form-accept" >
										<button type="submit" class="btn btn-success btn-sm">
											<i class="fas fa-check"></i>
											Accept
										</button>
									</form>
							</li>
							<li class="list-inline-item">
									<form action="" method="post" role="form" class="form-inline pull-right" id="form-reject">
										<button type="submit" class="btn btn-danger btn-sm">
											<i class="fas fa-times"></i>
											Reject
										</button>
									</form>
							</li>
						</ul>
					</div>
				</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
      </div>
    </div>
  </div>
	<!-- Logout Modal-->
	<%- include('../../../partials/modal-logout') %>

	<!-- Bootstrap core JavaScript-->
	<script src="/sb-admin-2/vendor/jquery/jquery.min.js"></script>
	<script src="/sb-admin-2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="/sb-admin-2/vendor/jquery-easing/jquery.easing.min.js"></script>

	<!-- Custom scripts for all pages-->
	<script src="/sb-admin-2/js/sb-admin-2.min.js"></script>

	<!-- Page level plugins -->
	<script src="/sb-admin-2/vendor/datatables/jquery.dataTables.min.js"></script>
	<script src="/sb-admin-2/vendor/datatables/dataTables.bootstrap4.min.js"></script>

	<!-- Page level custom scripts -->
	<script src="/sb-admin-2/js/demo/datatables-demo.js"></script>
	<script src="/swal/dist/sweetalert2.all.min.js"></script>

  <script>
    $(document).ready(function(){
      $("#dataTable").on("click", ".button-show", function(){
        $.ajax({
          type : "get",
          url : `${window.location.origin}/v1/api/booking/${$(this).data("id")}`,
          success : function(booking) {
            $("#image").attr("src", `http://localhost:3001/${booking.data.payments.proofPayment}`);
            $("#form-accept").attr("action", `/admin/booking/${booking.data._id}/accept?_method=PUT`);
            $("#form-reject").attr("action", `/admin/booking/${booking.data._id}/reject?_method=PUT`);
						$("#member").text(`${booking.data.memberId.firstName} ${booking.data.memberId.lastName}`);
						$("#total").text(`${booking.data.total}`);
						$("#accountHolder").text(booking.data.payments.accountHolder);
						$("#vacation").text(booking.data.vacationId.name);
					},
          error : function(e) {
            alert("Error!")
            console.log("ERROR: ", e);
          }
        });
      })
      
      $("#dataTable").on("click", ".button-delete", function(e){
        e.preventDefault();
        
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
          if (result.isConfirmed) {
						$(this).parent("form").submit();
          }
        })
      })

      <% if(alert.message != "") { %>
        Swal.fire(
          '<%= alert.status %>',
          '<%= alert.message %>',
          '<%= alert.status %>'
        )
      <% } %>
    })
  </script>

</body>

</html>